<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(project.errors.count, "error") %> Error al guardar:</h2>

      <ul>
        <% project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div >
    <%= form.label :nombre, style: "display: block" %>
    <%= form.text_field :nombre, placeholder: "Nombre del proyecto" %>
  </div>

  <div >
    <%= form.label :codigo, style: "display: block" %>
    <%= form.number_field :codigo, placeholder: "Agregue aqui el codigo del proyecto" %>
  </div>

  <div >
    <%= form.label :fecha, style: "display: block" %>
    <%= form.date_field :fecha %>
  </div>

  <div >
    <%= form.label :monto, style: "display: block" %>
    <%= form.text_field :monto, placeholder: "Agregue aqui el valor del proyecto" %>
  </div>

  <div >
    <%= form.label :descripcion, style: "display: block" %>
    <%= form.text_area :descripcion, placeholder: "Agregue aqui una descripcion"%>
  </div>

  <div style="width:180px">
    <%= form.label :Client_id, style: "display: block" %>
    <%= form.collection_select :Client_id, Client.all, :id, :nombre, {prompt: "Seleccionar"}, class:"form-select"%>
  </div>

   <div hidden >
    <%= form.label :State_id, style: "display: block" %>
    <%= form.text_field :State_id  %>
  </div>
  <br>
   <button type="submit" class="btn btn-primary">Crear</button>
 
<% end %>
